<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Blazor.BrowserExtension" Version="0.5.*" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.*" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.*" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\**\*" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot\Scripts\HtmlScrape.js" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="wwwroot\Icons\icon-128.png" />
    <None Remove="wwwroot\Icons\icon-16.png" />
    <None Remove="wwwroot\Icons\icon-48.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DgtAngelLib\DgtAngelLib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\Icons\icon-128.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="wwwroot\Icons\icon-16.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="wwwroot\Icons\icon-48.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
