{
    "manifest_version": 3,
    "name": "DGT Angel",
    "description": "'The ultimate focus mode'...You also need to install the DGT Cherub client software.",
    "version": "0.0.4",
    "homepage_url": "https://hyper-dragon.github.io/DgtAngel/",
    "icons": {
        "16": "icons/Default/icon-16.png",
        "48": "icons/Default/icon-48.png",
        "128": "icons/Default/icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "src/page_action/popup_action.html",
        "default_icon": "icons/Default/icon-128.png"
    },
    "permissions": [
    ],
    "host_permissions": [
        "https://www.chess.com/game/live/*",
        "https://www.chess.com/play/online/*",
        "https://www.chess.com/live/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.chess.com/game/live/*",
                "https://www.chess.com/play/online/*"
            ],
            "js": ["src/inject/chessHelpers.js","src/inject/messages.js", "src/inject/cdcPlayBoard.js", "src/inject/angelWrapper.js"]
        },
        {
            "matches": [
                "https://www.chess.com/live/*"
            ],
            "js": ["src/inject/chessHelpers.js", "src/inject/messages.js", "src/inject/cdcLiveBoard.js", "src/inject/angelWrapper.js"]
        }
    ]
}
